.footer{
  margin: 72px auto;
}
.information{
  border: borderGray;
  padding: 25px;
  &__p{
    font-family: PTSerif;
    font-size: 12px;
    line-height: 1.33;
    color: darkGray;
    max-width: 500px;
    text-align: left;
  }
}
.open__window{
  opacity: 0.8;
  cursor: pointer;
  &__shadow{
    /*box-shadow: 0 7px 1px -4px #f7decd;*/
    display: block;
    transform: translate(6px, 16px);
    width: 98px;
    height: 7px;
    background: #f7decd;
  }
}
.overlay {
  background-color: rgba(47, 47, 47, 0.7);
  bottom: 0;
  cursor: default;
  left: 0;
  opacity: 0;
  position: fixed;
  right: 0;
  top: 0;
  visibility: hidden;
  z-index: 99999;
  transition: opacity .5s;
}
.popup {
  background-color: #fff;
  display: inline-block;
  left: 50%;
  opacity: 0;
  width: 320px;
  height: 403px;
  position: fixed;
  text-align: center;
  top: 40%;
  visibility: hidden;
  z-index: 999999;
  transform: translate(-50%, -50%);
  &__title{
    font-family: fontFamily;
    font-size: 18px;
    font-weight: bold;
    line-height: 1.33;
    color: #141414;
    border-bottom: 1px solid lightGray;
    padding: 25px 69px;
  }
  &__form{
    padding: 48px 20px;
    text-align: left;
    &__input{
      border: borderGray;
      opacity: 0.5;
      font-family: fontFamily;
      font-size: 14px;
      font-style: italic;
      line-height: 1;
      width: 270px;
      height: 40px;
      outline: none;
      padding-left: 10px;
      margin: 15px auto;
    }
    &__div{
      text-align: center;
      &__button{
        width: 200px;
        height: 47.6px;
        background-color: freshOrange;
        color: white;
        text-transform: uppercase;
        font: 16px fontFamilyS;
        margin: 10px auto;
        outline: none;
        border: none;
        cursor: pointer;
      }
    }
  }
}
.close__window {
  width: 22px;
  height: 22px;
  position: absolute;
  top: -35px;
  right: -5px;
  cursor: pointer;
  padding: 5px;
  &:hover{
    border: 1px dashed freshOrange;
    padding: 4px;
  }
  &__icon{
    @extend $images--Clouse;
    display: inline-block;
  }
}
.under-footer{
  padding: 25px;
  line-height: 2;
  font: 12px fontFamily;
}
